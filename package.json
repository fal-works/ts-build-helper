{
  "name": "@fal-works/ts-build-helper",
  "description": "Helps build TypeScript projects.",
  "version": "0.1.1",
  "license": "MIT",
  "author": "FAL",
  "keywords": [
    "typescript",
    "build"
  ],
  "type": "module",
  "files": [
    "lib",
    "src"
  ],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@fal-works/chokidar-incremental": "^0.3.0",
    "@fal-works/esbuild-plugin-global-externals": "^1.0.0",
    "@fal-works/ts-transpile-modules": "^0.1.3",
    "esbuild": "^0.8.36",
    "prettier": "^2.2.1",
    "rollup": "^2.38.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/prettier": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc && npm run format:lib",
    "preformat:lib": "eslint --fix --no-ignore lib/**/*.{js,ts}",
    "format:lib": "prettier --write lib/**/*.{js,ts}",
    "lint": "eslint src/**/*.ts"
  }
}
